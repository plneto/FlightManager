@model FlightManager.Web.Models.EditFlightViewModel

@{
    ViewData["Title"] = "Edit Flight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Flight</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlightId" />
            <div class="form-group">
                <label class="control-label">Departure Airport:</label>
                <select asp-for="DepartureAirportId" asp-items="Model.Airports" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Destination Airport:</label>
                <select asp-for="DestinationAirportId" asp-items="Model.Airports" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}